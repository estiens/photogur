 -->
    <title><%= content_for?(:title) ? yield(:title) : "Webasil" %></title>
    <%= csrf_meta_tags %>
    <%= render 'layouts/styles' %>
  </head>
  <body>
    <%= render 'layouts/navigation' %> 
    
    <%= yield %>

    <%= render 'layouts/footer' %>
